#!/usr/bin/python3
"""Module that factorizes as many numbers as possible
into a product of two smaller numbers."""
import sys


def factorize(num: int):
    """
    Factorizes the given number into two smaller factors, if possible.
    Prints the factorization in the format "num=factor1*factor2".
    """
    itr = 2

    if num < 2:
        return
        
    while num % itr:
        itr += 1
    
    print("{}={}*{}".format(num, num//itr, itr))


if __name__ == "__main__":    
    if len(sys.argv) != 2:
        sys.exit()

    try:
        with open(sys.argv[1]) as file:
            line = file.readline()

            while line != "":                
                number = int(line.strip())                
                factorize(number)                
                line = file.readline()
    except Exception:
        pass
